@model Entidade.TipoAtividade

@{
    ViewData["Title"] = "Edit";
}

<h1>Alterar Tipo Ativdade</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" >
               @*<label asp-for="TipoAtividadeId" class="control-label"></label>*@
                <input asp-for="TipoAtividadeId" type=hidden class="form-control" />
                <span asp-validation-for="TipoAtividadeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label >Descrição</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
