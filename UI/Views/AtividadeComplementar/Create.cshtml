@model Entidade.AtividadeComplementar

<h4>Atividade Complementar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Aluno</label>
                @*<input asp-for="AlunoId" class="form-control" />*@
                <select asp-for="AlunoId" class="form-control">
                    @foreach (var aluno in Model?.AlunosParaSelecao)
                    {
                        <option value=@aluno.AlunoId>@aluno.Nome</option>
                    }
                </select>
                <span asp-validation-for="AlunoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Tipo Atividade</label>
                @*<input asp-for="TipoAtividadeId" class="form-control" />*@
                <select asp-for="TipoAtividadeId" class="form-control">
                    @foreach (var aluno in Model?.TipoAtividadesParaSelecao)
                    {
                        <option value=@aluno.TipoAtividadeId>@aluno.Descricao</option>
                    }
                </select>
                <span asp-validation-for="TipoAtividadeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Atividade Complementar</label>
                <input asp-for="DescricaoAtividade" class="form-control" />
                <span asp-validation-for="DescricaoAtividade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Carga Horária</label>
                <input type="number" asp-for="CargaHoraria" class="form-control" />
                <span asp-validation-for="CargaHoraria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Instituição De Ensino</label>
                <input asp-for="Institiuicao" class="form-control" />
                <span asp-validation-for="Institiuicao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Ano conclusão</label>
                <input type="number" min="2000" max="2100" asp-for="AnoConclusao" class="form-control" />
                <span asp-validation-for="AnoConclusao" class="text-danger"></span>
            </div>
         @*   <div class="form-group">
                <label asp-for="Arquivo" class="control-label"></label>
                <input type="file" asp-for="Arquivo" class="form-control" />
                <span asp-validation-for="Arquivo" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label>Informações Adicionais</label>
                <input asp-for="Observacao" class="form-control" />
                <span asp-validation-for="Observacao" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
